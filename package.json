{
	"name"                : "@osmium/coder",
	"version"             : "0.9.0",
	"description"         : "A comprehensive, type-safe data encoding, serialization, and utility library for JavaScript and TypeScript",
	"keywords"            : [
		"encoding",
		"serialization",
		"base64",
		"base58",
		"base32",
		"messagepack",
		"binary",
		"compression",
		"checksum",
		"crc32",
		"hash",
		"schema",
		"typescript",
		"buffer",
		"data",
		"codec",
		"osmium"
	],
	"license"             : "MIT",
	"author"              : {
		"name" : "Vasiliy Isaichkin",
		"email": "vasiliy@isaichkin.ru",
		"url"  : "https://github.com/osmiumjs"
	},
	"homepage"            : "https://github.com/osmiumjs/coder#readme",
	"repository"          : {
		"type": "git",
		"url" : "git+https://github.com/osmiumjs/coder.git"
	},
	"bugs"                : {
		"url": "https://github.com/osmiumjs/coder/issues"
	},
	"main"                : "./dist/index.js",
	"module"              : "./dist/index.js",
	"types"               : "./defs/index.d.ts",
	"exports"             : {
		".": {
			"types"  : "./defs/index.d.ts",
			"import" : "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"files"               : [
		"dist/",
		"defs/",
		"README.md",
		"LICENSE",
		"COVERAGE.md",
		"docs/",
		"examples/"
	],
	"engines"             : {
		"node": ">=16.0.0"
	},
	"scripts"             : {
		"compile"       : "tsc && webpack",
		"compress"      : "terser --compress --ecma 2015 -o ./dist/index.min.js -- ./dist/index.min.js",
		"pretest"       : "npm run compile",
		"test"          : "vitest run",
		"test:watch"    : "vitest",
		"test:coverage" : "vitest run --coverage",
		"clean"         : "rimraf dist defs",
		"clean:full"    : "rimraf dist defs node_modules",
		"build"         : "npm run clean && npm run compile && npm run compress && npm run test",
		"prepublishOnly": "npm run build",
		"examples:all"  : "tsx examples/BasicUsage.ts && tsx examples/AdvancedSerialization.ts && tsx examples/PerformanceComparison.ts && tsx examples/RealWorldExamples.ts",
		"docs"          : "echo 'Documentation available in docs/ directory'",
		"lint"          : "eslint src tests --ext .ts",
		"lint:fix"      : "eslint src tests --ext .ts --fix",
		"lint:check"    : "eslint src tests --ext .ts --max-warnings 0",
		"format"        : "echo 'Formatting not configured yet'"
	},
	"dependencies"        : {
		"@osmium/is"     : "~0.2.0",
		"@osmium/iterate": "~0.3.2",
		"msgpackr"       : "~1.11.5",
		"ts-mixer"       : "^6.0.4",
		"ts-node"        : "^10.9.2"
	},
	"devDependencies"     : {
		"@types/bs58"                     : "~5.0.0",
		"@types/node"                     : "~24.2.1",
		"@typescript-eslint/eslint-plugin": "~8.38.0",
		"@typescript-eslint/parser"       : "~8.38.0",
		"@vitest/coverage-v8"             : "^2.1.9",
		"@vitest/ui"                      : "^2.1.9",
		"buffer"                          : "~6.0.3",
		"eslint"                          : "~8.57.1",
		"eslint-plugin-smarter-tabs"      : "~1.2.0",
		"rimraf"                          : "^6.0.1",
		"terser"                          : "~5.43.1",
		"ts-loader"                       : "~9.5.2",
		"tsx"                             : "^4.20.3",
		"typescript"                      : "~5.8",
		"vitest"                          : "^2.1.9",
		"webpack"                         : "~5.101.0",
		"webpack-cli"                     : "~6.0.1"
	},
	"peerDependencies"    : {
		"typescript": ">=5.0.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	}
}
